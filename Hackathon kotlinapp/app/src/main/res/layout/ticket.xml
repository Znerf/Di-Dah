<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
              android:layout_height="match_parent" android:orientation="horizontal"
              android:background="@color/gray"
              android:paddingLeft="3pt" android:paddingRight="5pt" android:paddingTop="5pt">

    <LinearLayout
            android:background="@drawable/background"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_weight="1" android:padding="15dp"
            android:id="@+id/Button"
    >
        <TextView
                android:text="Home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/PlaceText" android:layout_weight="3.84"
                android:textSize="20sp" android:layout_marginLeft="15sp"/>
        <Button
                android:text="Checking"
                android:layout_width="69dp"
                android:layout_height="wrap_content" android:id="@+id/StatusButton" android:layout_weight="0.63"/>
    </LinearLayout>
</LinearLayout>
